<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:paddingBottom="16dp"
    android:background="#55FFFFFF">
    <TextView
        android:id="@+id/tv_about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_tmdb_declaration"
        android:autoLink="web"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_about_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_written_by"
        app:layout_constraintTop_toBottomOf="@id/tv_about_text"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_about_text"

        android:autoLink="email"/>

    <ImageView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:contentDescription="@string/powered_by_the_movie_db"
        android:src="@drawable/themoviedb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about_developer"

        />

</android.support.constraint.ConstraintLayout>