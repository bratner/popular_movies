<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:descendantFocusability="blocksDescendants"
            tools:context="il.co.ratners.popularmovies.MovieDetailsActivity">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/poster_placeholder"

                />

            <include
                android:id="@+id/details_text"
                layout="@layout/movie_detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_movie_poster" />

            <TextView
                android:id="@+id/label_trailers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Trailers:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/details_text"
                tools:visibility="visible" />

            <ListView
                android:id="@+id/lv_trailer_list"

                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_marginLeft="60dp"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_trailers"
                tools:listitem="@layout/trailer_list_item"
                tools:visibility="visible"


                />

            <TextView
                android:id="@+id/label_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reviews:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/lv_trailer_list"
                tools:visibility="visible" />

            <ListView
                android:id="@+id/lv_reviews_list"

                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="60dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_reviews"
                tools:listitem="@layout/review_list_item"
                tools:visibility="visible"

                />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/lv_reviews_list" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>